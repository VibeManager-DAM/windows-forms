<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:views="clr-namespace:VibeManager.Pages"
                    xmlns:viewmodels="clr-namespace:VibeManager.ViewModels">

    <!-- Template para la vista de login -->
    <DataTemplate DataType="{x:Type viewmodels:LoginVM}">
        <views:Login />
    </DataTemplate>

    <!-- Template para la vista de dashboard -->
    <DataTemplate DataType="{x:Type viewmodels:HomeVM}">
        <views:Home />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:DashboardVM}">
        <views:Dashboard />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:UsersVM}">
        <views:Users />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:SpacesVM}">
        <views:Spaces />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:SettingsVM}">
        <views:Settings />
    </DataTemplate>

    <DataTemplate DataType="{x:Type viewmodels:MenuEventVM}">
        <views:MenuEvent />
    </DataTemplate>

</ResourceDictionary>
