<UserControl x:Class="VibeManager.Pages.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VibeManager.Pages"
             mc:Ignorable="d" 
              d:DesignWidth="800">
    <Grid>
        <StackPanel Width="250"
                    Grid.Row="1"
                    Orientation="Vertical"
                    Margin="0,35,0,0">  

            <Image Source="/Resources/logo.png"
                    Width="250" Height="250"/>

            <TextBlock Text="Vibe Manager"
                       Foreground="#03201D"
                       FontSize="36"
                       FontFamily="/Fonts/Gabarito.ttf #Gabarito"
                       FontWeight="Medium"
                       HorizontalAlignment="Center"/>   



            <TextBlock Text="Username"
                       Foreground="#39514F"
                       FontSize="18"
                       FontWeight="Medium"
                       FontFamily="/Fonts/Gabarito.ttf #Gabarito"                           
                       Margin="0,35,0,0"/>

            <TextBox x:Name="txtUser" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                     FontSize="16"
                     FontWeight="Medium"
                     FontFamily="/Fonts/Gabarito.ttf #Gabarito"                            
                     Foreground="Black"
                     CaretBrush="LightGray"
                     BorderBrush="DarkGray"
                     BorderThickness="0,0,0,2"
                     Height="28"
                     VerticalContentAlignment="Center"
                     Margin="0,5,0,0"
                     Padding="30,0,0,0">

                <TextBox.Background>
                    <ImageBrush ImageSource="/Resources/user-icon.png"
                                Stretch="Uniform"
                                AlignmentX="Left"/>
                </TextBox.Background>
            </TextBox>

            <TextBlock Text="Password"
                       Foreground="#39514F"
                       FontSize="18"
                       FontWeight="Medium"
                       FontFamily="/Fonts/Gabarito.ttf #Gabarito"                             
                       Margin="0,15,0,0"/>

            <PasswordBox x:Name="txtPass"
                         FontSize="13"
                         FontWeight="Medium"
                         FontFamily="/Fonts/Gabarito.ttf #Gabarito"                           
                         Foreground="Black"
                         CaretBrush="LightGray"
                         BorderBrush="DarkGray"
                         BorderThickness="0,0,0,2"
                         Height="28"
                         VerticalContentAlignment="Center"
                         Margin="0,5,0,0"
                         Padding="30,0,0,0"
                         PasswordChanged="txtPass_PasswordChanged">
                
                <PasswordBox.Background>
                    <ImageBrush ImageSource="/Resources/key-icon.png"
                                Stretch="Uniform"
                                AlignmentX="Left"/>
                </PasswordBox.Background>
            </PasswordBox>

            <Button x:Name="btnLogin"
                    Command="{Binding LoginCommand}"
                    BorderThickness="0"
                    Content="LOG IN"
                    Foreground="White"
                    FontSize="12"
                    FontFamily="/Fonts/Gabarito.ttf #Gabarito"
                    Cursor="Hand"                           
                    Margin="0,50,0,0">

                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#03201D"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#39514F"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="150" Height="40"
                                CornerRadius="20"
                                Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </Grid>

</UserControl>
