<UserControl x:Class="VibeManager.Pages.MenuEvent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VibeManager.Pages"
             mc:Ignorable="d" 
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:gmap="clr-namespace:GMap.NET.WindowsPresentation;assembly=GMap.NET.WindowsPresentation"
             d:DesignHeight="500" d:DesignWidth="800">

    <Grid>
        <!-- Columnas principales -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="500"/>
            <!-- Columna izquierda: DataGrid + formulario -->
            <ColumnDefinition Width="*"/>
            <!-- Columna derecha: mapa -->
        </Grid.ColumnDefinitions>

        <!-- Panel izquierdo -->
        <StackPanel Grid.Column="0" Margin="10">

            <!-- DataGrid de eventos -->
            <DataGrid x:Name="EventsDataGrid"
                  AutoGenerateColumns="False"
                  Height="150"
                  Margin="0,0,0,10"
                  SelectionChanged="EventsDataGrid_SelectionChanged"
                  IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Título" Binding="{Binding Title}" Width="*"/>
                    <DataGridTextColumn Header="Fecha" Binding="{Binding Date}" Width="100"/>
                    <DataGridTextColumn Header="Hora" Binding="{Binding Time}" Width="100"/>
                    <DataGridTextColumn Header="Capacidad" Binding="{Binding Capacity}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- Formulario -->
            <Label Content="Título:" Foreground="#39514F"
                    FontSize="18"
                    FontWeight="Medium"
                    FontFamily="/Fonts/Gabarito.ttf #Gabarito"/>
            <TextBox x:Name="TitleTextBox" />

            <Label Content="Descripción:" />
            <TextBox x:Name="DescriptionTextBox" Height="60"/>

            <Label Content="Fecha:" />
            <DatePicker x:Name="DatePicker" />

            <Label Content="Hora:" />
            <xctk:TimePicker
                Name="TimePickerControl"
                Format="Custom"
                FormatString="HH:mm"
                TextAlignment="Left"
                Value="{Binding SelectedTime, Mode=TwoWay}" 
                />

            <StackPanel Orientation="Horizontal" Margin="0" >
                <Label Content="Capacidad:" />
                <CheckBox x:Name="SeatsAvailableCheckBox" Content="¿Evento con asientos disponibles?" 
                          Checked="SeatsAvailableCheckBox_Checked" 
                          Unchecked="SeatsAvailableCheckBox_Unchecked" Margin="200,8,0,0"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Margin="0" >
                <TextBox x:Name="CapacityTextBox" Width="100" HorizontalAlignment="Left" Margin="5,0,0,0"/>
                <StackPanel x:Name="SeatsPanel" Orientation="Horizontal" Margin="150,0,0,0">
                    <Label Content="Filas:"/>
                    <TextBox x:Name="RowsTextBox" Width="50" Margin="5,0"/>
                    <Label Content="Columnas:"/>
                    <TextBox x:Name="ColumnsTextBox" Width="50" Margin="5,0"/>
                </StackPanel>
            </StackPanel>

            <!-- Seleccionar espacio -->
            <Label Content="Seleccionar Espacio:" />
            <ComboBox x:Name="SpaceComboBox" Width="400"/>

            <!-- Botones -->
            <StackPanel Orientation="Horizontal" Margin="0,10" HorizontalAlignment="Center">
                <Button Content="Guardar" Width="100" Margin="5" Click="SaveEventButton_Click"/>
                <Button Content="Eliminar" Width="100" Margin="5" Click="DeleteEventButton_Click"/>
                <Button Content="Limpiar" Width="100" Margin="5" Click="ClearFieldsButton_Click"/>
            </StackPanel>
        </StackPanel>

        <!-- Panel derecho: mapa -->
        <gmap:GMapControl x:Name="GMapControl" Grid.Column="1"
                      Margin="10"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      MouseLeftButtonDown="GMapControl_MouseLeftButtonDown"/>
    </Grid>

</UserControl>
